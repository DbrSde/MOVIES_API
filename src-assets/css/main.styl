ul#movies-list
  list-style none
  display flex
  flex-wrap wrap
  li
    margin 3% 0
    img
      width 100%
      opacity 1
      height auto
      transition .5s ease
      backface-visibility hidden
      z-index 1
      border-radius 8px
      &:hover
        transform scale(1.1)
        z-index 2
    a
      width 100%
      &:after
        content ""

h1
  font-family Heebo,sans-serif
  font-size 4em
  line-height 4em
  color #1c2129

h2
  font-family Heebo,sans-serif
  font-size 2em
  line-height 1.5em
  color #1c2129
  font-smoothing antialiased
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-align center