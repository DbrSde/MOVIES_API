.ns-box
  position fixed
  background rgba(42,45,50,0.85)
  padding 22px 22px 22px 16px
  line-height 1.4
  z-index 1000
  pointer-events none
  color rgba(250,251,255,0.95)
  font-size 90%
  z-index 9999999
  a
    color inherit
    opacity 0.7
    font-weight 700
    &:hover, &:focus
      opacity 1
  p
    margin 0

.ns-box.ns-show,
.ns-box.ns-visible
  pointer-events: auto

.ns-close
  width 20px
  height 20px
  position absolute
  right 4px
  top 4px
  overflow hidden
  text-indent 100%
  cursor pointer
  backface-visibility hidden
  &:hover, &:focus
    outline none

.ns-close::before,
.ns-close::after
  content: ''
  position absolute
  width 3px
  height 60%
  top 50%
  left 50%
  background #6e6e6e

.ns-close:hover::before
.ns-close:hover::after
  background #fff

.ns-close
  &:before
    transform: translate(-50%,-50%) rotate(45deg)
  &:after
    transform: translate(-50%,-50%) rotate(-45deg);

.ns-box.ns-bar
  top 0
  left 0
  width 100%

.ns-bar .ns-close
  background transparent
  top 50%
  right 20px
  transform translateY(-50%)

.ns-bar .ns-close::before,
.ns-bar .ns-close::after
  background #b7b5b3

.ns-effect-slidetop
  box-shadow inset 4.5em 0 rgba(0,0,0,0.6)
  .icon
    position absolute
    display block
    font-size 109%
    top 50%
    left 1em
    transform translate3d(0,-50%,0)

.ns-effect-slidetop p
  padding 0 3.2em
  font-size 1.2em
  display inline-block

.ns-effect-slidetop .ns-close::before,
.ns-effect-slidetop .ns-close::after
  width 2px
  background #fff

.ns-effect-slidetop .ns-close:hover::before,
.ns-effect-slidetop .ns-close:hover::after
  background #fff

.ns-effect-slidetop.ns-show .icon,
.ns-effect-slidetop.ns-show p
  -webkit-animation-name animScaleUp
  animation-name animScaleUp
  -webkit-animation-duration 0.3s
  animation-duration 0.3s
  -webkit-animation-delay 0.2s
  animation-delay:0.2s
  -webkit-animation-fill-mode both
  animation-fill-mode both

.ns-effect-slidetop.ns-show p
  -webkit-animation-name animFade
  animation-name animFade

@-webkit-keyframes animScaleUp {
  0% { opacity: 0; -webkit-transform: translate3d(0,-50%,0) scale3d(0,0,1); }
  100% { opacity 1; -webkit-transform: translate3d(0,-50%,0) scale3d(1,1,1); }
}

@keyframes animScaleUp {
  0% { opacity: 0; -webkit-transform: translate3d(0,-50%,0) scale3d(0,0,1); transform: translate3d(0,-50%,0) scale3d(0,0,1); }
  100% { opacity 1; -webkit-transform: translate3d(0,-50%,0) scale3d(1,1,1); transform: translate3d(0,-50%,0) scale3d(1,1,1); }
}

.ns-effect-slidetop.ns-show
  -webkit-animation-name animSlideTop
  animation-name animSlideTop
  -webkit-animation-duration 0.3s
  animation-duration 0.3s

.ns-effect-slidetop.ns-hide
  -webkit-animation-name animSlideBottom
  animation-name animSlideBottom
  -webkit-animation-duration 0.3s
  animation-duration 0.3s

@-webkit-keyframes animSlideTop {
  0% { -webkit-transform: translate3d(0,-100%,0); opacity: 0}
  100% { -webkit-transform: translate3d(0,0,0); opacity:100}
}

@keyframes animSlideTop {
  0% { transform: translate3d(0,-100%,0); opacity: 0}
  100% { transform: translate3d(0,0,0); opacity:100}
}

@-webkit-keyframes animSlideBottom {
  0% { -webkit-transform: translate3d(0,0,0); }
  100% { -webkit-transform: translate3d(0,-100%,0); opacity: 0;}
}

@keyframes animSlideBottom {
  0% { transform: translate3d(0,0,0); }
  100% { transform: translate3d(0,-100%,0); opacity: 0;}
}

.notification-icon
  font-size 18px !important

.background-error
  background-color $color-danger

.background-warning
  background-color $color-warning

.background-info
  background-color $color-info

.background-success
  background-color $color-success